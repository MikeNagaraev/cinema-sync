<div class="header">
  <div class="logo pull-left">
    <h2 class="logo-text">
      <a href="<%= root_path %>">CinemaSync</a>
    </h2>
  </div>
  <% if current_user %>
    <button class="button-create" data-toggle="modal" data-target="#create-room-pop-up">
      Create room
      <span class="glyphicon glyphicon-plus"></span>
    </button>
  <% end %>
  <div class="site-navigation pull-right">
    <ul class="site-navigation-list">
      <li class="site-navigation-list-item">
        <a href="<%= root_path %>" class="site-navigation-text">Home</a>
      </li>
      <li class="site-navigation-list-item">
        <a href="<%= about_path %>" class="site-navigation-text">About</a>
      </li>
      <% if !user_signed_in? %>
      <li class="site-navigation-list-item">
        <%= link_to "Sign in", new_user_session_path, class: "site-navigation-text"%>
      </li>
      <li class="site-navigation-list-item">
        <%= link_to "Sign up", new_user_registration_path, class: "site-navigation-text" %>
      </li>
    <% else %>
      <li class="site-navigation-list-item">
        <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "site-navigation-text" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<%= render 'layouts/create_room_pop_up' %>
