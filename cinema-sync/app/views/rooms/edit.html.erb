<div class="container">

  <div class="form-group col-md-6 col-sm-12 col-md-offset-3 edit-room">
    <%= form_for @room, url: { action: :update }, method: :put do |f| %>
    <p>
      <%= f.label "Room name:", class: "edit-room-label" %>
      <%= f.text_field :title, class: 'form-control' %>
    </p>

    <% if @room.video_title %>
    <p>
      <%= f.label "Video title:", class: "edit-room-label"  %>
      <%= f.text_field :video_title, class: 'form-control' %>
    </p>

    <p>
      <%= f.label "Video url:", class: "edit-room-label"  %>
      <%= f.text_field :video_url, class: 'form-control',required: true, value: "", pattern: "(https?)://(www.)?youtube.com/watch[?]v=(.{8,14})" %>
    </p>
    <% end %>

    <%= f.submit class: 'btn btn-success edit-room-form-button' %>
    <% end %>
  </div>

</div>
