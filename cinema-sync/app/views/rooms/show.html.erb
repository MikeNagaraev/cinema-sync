<div class="container-fluid room-page">
  <div class="room-page-header">
    <h2><%= @room.title %></h2>
  </div>
  <div class="room-page-body">
    <div class="col-md-8">
      <div class="room-page-body-video-block">
        <div class="room-page-body-video-block-header">
          Some title of Film
        </div>
        <div class="room-page-body-video-block-video">
          <iframe src="https://www.youtube.com/embed/Tp0GTdXwxMw" allowfullscreen frameborder="0" width="100%" height="100%"></iframe>
        </div>
      </div>
      <div class="room-page-body-options">
        <% if @room.user == current_user %>
        <div class="admin-options">
          <a href="#" class="edit-room-button option-button">Edit</a>
          <%= link_to "Delete", user_room_path(current_user, @room),  method: :delete, class: "delete-room-button option-button" %>
        </div>
        <% end %>
        <div class="user-options"></div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="room-page-body-chat">
        <div class="room-page-body-chat-header">
          <h2>Chat</h2>
        </div>
        <div class="room-page-body-chat-body"></div>
      </div>
    </div>
  </div>
</div>
